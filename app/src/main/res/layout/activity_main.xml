<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <cn.leo.nodeprogressbar.NodeProgressBar
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:npb_text_align="bottom"
        app:npb_text_margin="30dp"
        android:padding="25dp"
        app:npb_thickness="6dp"
        app:npb_mode="spaceAround"
        app:npb_start_color="#FFFED2A1"
        app:npb_background_color="#33000000"
        app:npb_end_color="#FFC6904E"
        app:npb_text_color="@color/teal_200"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:npb_node_active="@mipmap/ic_node_active"
        app:npb_node_inactive="@mipmap/ic_node_inactive" />

</androidx.constraintlayout.widget.ConstraintLayout>